---
const { formType } = Astro.props;

// Mapping formType to specific iframe URLs
const formUrls = {
  Question: 'https://work.protorebel.com/p/form/BoGBNaH3Fj8hsF6jY',
  Consult: 'https://work.protorebel.com/p/form/BoGBNaH3Fj8hsF6jY',
  Fit: 'https://work.protorebel.com/p/form/BoGBNaH3Fj8hsF6jY',
};

// Select the appropriate src based on formType prop
const iframeSrc = formUrls[formType] || formUrls.Question;
const iframeHeight = formType == 'Consult' ? '820' : '720;';
---

<footer>
  <iframe src={iframeSrc} width="100%" height={iframeHeight} frameBorder="0" scrolling="no"/>
</footer>

<style>
    iframe {
        max-width: 100%;
        width: 620px;
        background-color: #000;
        overflow: hidden;
    }
</style>