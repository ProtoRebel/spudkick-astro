---
import {Image} from 'astro:assets';
import VideoBacking from './VideoBacking.astro';

const { img, title } = Astro.props;
---

<header>
  <VideoBacking />
  <Image src={img} width="1600" height="914" alt={title} />
</header>

<style>
    header {
        position: relative;
        overflow: hidden;
        aspect-ratio: 16/9;
    }

    header img {
        display: block;
        mix-blend-mode: hard-light;
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        object-fit: cover;
    }
</style>