---
const { current = '' } = Astro.props;
---

<nav class=`nav nav-${current}`>
  <a class={current === 'home' ? 'selected' : ''} href='/'>Overview</a>
  <a class={current === 'about' ? 'selected' : ''} href='/about'>About</a>
  <a class={current === 'portfolio' ? 'selected' : ''} href='/portfolio'>Portfolio</a>
  <a class={current === 'blog' ? 'selected' : ''} href='/blog'>Blog</a>
  <a class={current === 'contact' ? 'selected' : ''} href='/contact'>Contact</a>
</nav>

<style>
  nav {
    position: relative;
    width: 100%;
    align-items: center;
    display: flex;
    font-family: var(--font-family--deco);
    justify-content: space-between;
    background-color: var(--color-black);
    padding: var(--pad-small);
  }

  @media (min-width: 960px) {
  }

  nav::before,
  nav::after {
    content: '';
    width: 100%;
    height: var(--pad-small);
    position: absolute;
    left: 0;
  }

  nav::before {
    background: linear-gradient(to bottom, transparent, var(--color-black));
    bottom: 100%;
  }

  nav::after {
    background: linear-gradient(to top, transparent, var(--color-black));
    top: 100%;
  }

  a {
    position: relative;
    display: block;
    font-size: 1.25em;
    color: var(--color-white);
  }

  a:before {
    content: '';
    display: block;
    position: absolute;
    left: -0.5rem;
    top: 0;
    opacity: 0;
    width: calc(100% + 1rem);
    height: 1px;
    background-color: var(--color-yellow);
    transition: var(--transition-grow);
  }

  a:hover:before,
  a:active:before,
  a:focus:before {
    opacity: 1;
    top: 50%;
  }

  a.selected {
    color: var(--color-yellow);
  }

  a.selected:before {
    display: none;
  }

  @media (min-width: 960px) {
    nav {
      padding: var(--pad-small) var(--pad) var(--pad-small) 0;
    }

    a {
      padding: 0;
    }
  }
</style>