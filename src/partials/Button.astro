---
const { url, title, target} = Astro.props;
---

<a href={url} target={target}>
  <span>{title}</span>
</a>

<style>
    a {
        display: inline-block;
        position: relative;
        font-family: var(--font-family--deco);
        font-size:1.25em;
        border: 2px solid var(--color-yellow);
        padding: 1rem var(--pad-small);
        background-color: var(--color-black);
        color: var(--color-white);
        overflow: hidden;
        transition: var(--transition-grow);
    }

    a span {
        display: block;
        position: relative;
        z-index: 1;
    }

    a:before {
        content: '';
        display: block;
        position: absolute;
        z-index: 0;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: var(--color-yellow);
        transform: translateX(100%);
        transition: var(--transition-hover);
    }

    a:hover,
    a:focus,
    a:active {
        color: var(--color-black);
    }

    a:hover:before,
    a:focus:before,
    a:active:before {
        transform: translateX(0);
    }
</style>