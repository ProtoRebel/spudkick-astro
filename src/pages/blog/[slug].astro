---
import BaseLayout from '../../layouts/BaseLayout.astro';
import getPostData from '../../utils/getBlogData';
import RotatingWords from '../../components/RotatingWords.astro';
import Forms from '../../components/Forms.astro';
import VideoBacking from '../../components/VideoBacking.astro';

export async function getStaticPaths() {
  const posts = await import.meta.glob('../../../data/blog/*.md', { eager: true });
  return Object.entries(posts).map(([file, post]) => ({
    params: {
      slug: file.split('/').pop().split('.').shift()
    },
    props: {
      post
    },
  }));
}

const { Content, frontmatter } = Astro.props.post;
const { title, subTitle, description, publishDate, featuredImage, cta } = frontmatter;
const { slug, readingTime } = getPostData(Astro.props.post);
const permalink = `${Astro.site.href}blog/${slug}`;
---

<BaseLayout
  title={title}
  description={description}
  permalink={permalink}
  openGraph={`${Astro.site.href}assets/blog/${featuredImage.img}`}
  current="blog"
>
  <header class="image">
    <VideoBacking />
    <img
      src={`/assets/blog/${featuredImage.img}`}
      width="1600"
      height="900"
      alt={featuredImage.title}
    />
  </header>
  <article>
    <header>
      <h1>
        {title}
        <span>{subTitle}</span>
      </h1>
      <p>Published {publishDate} &bull; {readingTime}</p>
    </header>
    <Content />
  </article>
  <footer>
    <RotatingWords
      before={cta.before}
      words={cta.words}
      after={cta.after}
    />
    <Forms formType="Consult" />
  </footer>
</BaseLayout>

<style>
	.image {
		position: relative;
		width: 100%;
		height: auto;
		aspect-ratio: 16 / 9;
		overflow: hidden;
	}

	.image img {
		display: block;
		position: absolute;
		width: 100%;
		height: 100%;
		top: 0;
		left: 0;
		mix-blend-mode: hard-light;
		object-fit: cover;
	}

	article {
		padding: var(--pad-small);
		max-width: var(--layout-max--reading);
	}

	h1 {
		text-transform: lowercase;
		font-weight: var(--font-weight--bold);
		font-size: 2em;
	}

	h1 span {
		display: block;
		font-size: 0.75em;
		font-family: var(--font-family--serif);
		font-weight: var(--font-weight--regular);
		font-style: italic;
		color: var(--color-yellow);
	}

	header p {
		text-transform: uppercase;
		color: var(--color-white);
		font-weight: var(--font-weight--bold);
		font-size: 0.75em;
	}

	footer {
		padding: 0 var(--pad-small);
	}

	@media (min-width: 960px) {
		article,
		footer {
			padding: var(--pad-small) var(--pad) 0 0;
		}
	}
</style>
