---
import BaseLayout from '../../layouts/BaseLayout.astro';
import VideoBacking from '../../components/VideoBacking.astro';

const title = 'All Blog Articles';
const description = 'Predictions, opinions, and musings about the state of software, apps, websites, and design.';
const permalink = `${Astro.site.href}blog`;

// Fetch all markdown posts using import.meta.glob with eager loading
const posts = await import.meta.glob('../../../data/blog/*.md', { eager: true });

// Convert to array and sort by date
const postsArray = Object.entries(posts)
  .map(([path, post]) => ({
    ...post,
    path
  }))
  .sort((a, b) =>
    new Date(b.frontmatter.publishDate).valueOf() -
        new Date(a.frontmatter.publishDate).valueOf()
  );
---

<BaseLayout title={title} description={description} permalink={permalink} current="blog">
  <h1>Blog</h1>
  <ul>
    {postsArray.map((post, index) => {
      const href = `/blog/${post.path.split('/').pop().split('.').shift()}`;
      return (
        <li key={index}>
          <a href={href} title="Read full article">
            <div class="image">
              <VideoBacking />
              <img
                src={`/assets/blog/${post.frontmatter.featuredImage.img}`}
                width="1600"
                height="900"
                alt={post.frontmatter.featuredImage.title}
              />
            </div>
            <h2>{post.frontmatter.title}</h2>
            <time>
              {post.frontmatter.publishDate}
              <span>&rarr;</span>
            </time>
            <p>{post.frontmatter.description}</p>
          </a>
        </li>
      );
    })}
  </ul>
</BaseLayout>

<style>
  h1 {
    display: none;
  }
  ul {
    list-style-type: none;
    margin: 0;
    padding: 0 var(--pad-small);
    display: flex;
    flex-wrap: wrap;
    gap: var(--pad-small);
  }
  li {
    width: 100%;
    padding: 0;
    margin: 0;
    font-size: 0.75em;
  }
  p {
    display: none;
    font-size: 0.75em;
    color: var(--color-grey--light);
  }
  li:first-child {
    font-size: 1em;
  }
  li:first-child p {
    display: block;
  }
  @media (min-width: 960px) {
    ul {
      padding: 0 var(--pad) 0 0;
    }
    li {
      width: calc(50% - calc(var(--pad-small) * 0.5));
    }
    li:first-child {
      width: 100%;
    }
  }
  .image {
    position: relative;
    width: 100%;
    height: auto;
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }
  .image img {
    display: block;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    mix-blend-mode: hard-light;
    object-fit: cover;
  }
  h2 {
    font-size: 1.5em;
    margin-bottom: 0;
    transition: var(--transition-hover);
  }
  time {
    display: block;
    color: var(--color-white);
    font-weight: var(--font-weight--bold);
    font-size: 0.75em;
    text-transform: uppercase;
    transition: var(--transition-hover);
  }
  time span {
    display: inline-block;
    font-size: 1.5em;
    margin-left: 0.5ex;
    animation: saw 1s infinite alternate ease-out;
    color: var(--color-black);
    transition: var(--transition-hover);
  }
  a:hover h2,
  a:active h2,
  a:focus h2 {
    color: var(--color-white);
  }
  a:hover time,
  a:active time,
  a:focus time,
  a:hover time span,
  a:active time span,
  a:focus time span {
    color: var(--color-yellow);
  }
</style>
